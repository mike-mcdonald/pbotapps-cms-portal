{#
/**
 * @file
 * Theme override for a dropbutton wrapper.
 *
 * Available variables:
 * - children: Contains the child elements of the dropbutton menu.
 *
 * @see template_preprocess()
 */
#}
{%
  set wrapper_classes = wrapper_classes|default([
    'flex',
    'flex-col',
    'items-start',
  ])
%}
{% if children %}
  {% spaceless %}
    <div class="{{ wrapper_classes|merge(['dropbutton-wrapper'])|join(' ') }}">
      <div class="dropbutton-widget">
        {{ children }}
      </div>
    </div>
  {% endspaceless %}
{% endif %}
