{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set region_element = region_element|default('div') %}
{%
  set region_classes = region_classes|default([
    'region',
    'region-' ~ region|clean_class
  ])
%}
{% block content %}
  {% if content %}
    <{{region_element}}{{attributes.addClass(region_classes)}}>
      {% block before_children %}{% endblock %}
      {{ content }}
      {% block after_children %}{% endblock %}
    </{{region_element}}>
  {% endif %}
{% endblock %}
